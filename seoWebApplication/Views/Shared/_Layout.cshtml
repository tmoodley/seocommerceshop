                </div>
                <div class="col-md-3 col-sm-4">
                    <a href="#" class="btn btn-danger btn-lg">Contact us</a>
                </div>
            </div><!-- /.row -->

        </div><!-- /.container -->

    </div><!-- /.section-colored -->

    <div class="section" id="recent-projects" style="position: relative;">

        <div class="container"> 
            @RenderBody()
        </div><!-- /.container -->

    </div><!-- /.section -->

    <div class="section-colored">

        <div class="container">
            <h3 class="section-title text-center">Some of Our Clients</h3>

            <div class="container clients">

                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                        <a href="#"><img src="~/img/ZIMBABWE-HOME.png" /></a>
                    </div>

                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                        <a href="#"><img src="~/img/lanecatering.png" /></a>
                    </div>

                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                        <a href="#">  <img src="~/img/CyclesWayLogo.png" /> </a>
                    </div>

                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                        <a href="#"> </a>
                    </div>

                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                        <a href="#"> </a>
                    </div>

                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                        <a href="#"> </a>
                    </div>
                </div><!-- /.row -->

            </div><!-- /.container -->

        </div><!-- /.container -->

    </div><!-- /.section-colored -->

    <footer>
